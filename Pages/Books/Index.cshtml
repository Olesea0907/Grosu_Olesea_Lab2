@page "/"
@model Grosu_Olesea_Lab2.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<!-- Search Form -->
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Book Title / Author Name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" class="form-control d-inline-block" style="width: 300px;" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index" class="btn btn-link">Back to full List</a>
        </p>
    </div>
</form>

@if (Model.BookD?.Books?.Any() == true)
{
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.TitleSort" class="text-decoration-none">
                        @Html.DisplayNameFor(model => model.BookD.Books.First().Title)
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.AuthorSort" class="text-decoration-none">
                        @Html.DisplayNameFor(model => model.BookD.Books.First().Author.FullName)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookD.Books.First().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookD.Books.First().PublishingDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookD.Books.First().Publisher.PublisherName)
                </th>
                <th>
                    Categories
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BookD.Books)
            {
                string selectedRow = item.ID == Model.BookID ? "table-success" : "";

                <tr class="@selectedRow">
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Author.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.PublishingDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Publisher.PublisherName)</td>
                    <td>
                        @foreach (var category in item.BookCategories)
                        {
                            <span>@category.Category.CategoryName</span>

                            <br />
                        }
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No books available.</p>
}

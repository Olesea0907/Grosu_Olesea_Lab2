@page "{id:int?}"
@model Grosu_Olesea_Lab2.Pages.Publishers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @if (Model.PublisherData.Publishers.Any())

                {
                    @Html.DisplayNameFor(model => model.PublisherData.Publishers.First().PublisherName)
                }

                else

                {
                    <span>Publisher Name</span>
                }
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PublisherData.Publishers)

        {

            string selectedRow = item.ID == Model.PublisherID ? "table-success" : "";
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherName)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.PublisherData.Books != null && Model.PublisherData.Books.Any())

{
    <h2>Books Edited by Selected Publisher</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.PublisherData.Books)

            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => book.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => book.Author.FullName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

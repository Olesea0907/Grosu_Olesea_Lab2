@page
@model Grosu_Olesea_Lab2.Pages.Borrowings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Borrowing</h1>

<h3>Are you sure you want to delete this borrowing?</h3>
<div>
    <h4>Borrowing Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Member
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.Member.FullName
        </dd>
        <dt class="col-sm-2">
            Book
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.Book.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.Book.Author.FullName
        </dd>
        <dt class="col-sm-2">
            Return Date
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.ReturnDate.ToShortDateString()
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Borrowing.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
